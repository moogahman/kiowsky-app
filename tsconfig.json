{
	"compilerOptions": {
		/* Base Options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"isolatedModules": true,
		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		]
	},
	"include": [
		"./src",
		"__tests__/"
	],
	"exclude": [
		"./node_modules",
		"./dist"
	]
}