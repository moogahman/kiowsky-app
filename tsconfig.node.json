{
	"compilerOptions": {
		/* Base Options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2022",
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		/** Transpiling */
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": [
			"ES2023"
		],
	},
	"include": [
		"vite.config.ts"
	]
}